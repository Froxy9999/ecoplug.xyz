<%- include("../partials/head", { user, path, description, title: "Home", twitter, url, image }) %>
<head>
	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
	<link href="https://templates.xenon.bot/static/tailwind.css" rel="stylesheet">
	<link href="/css/main.css" rel="stylesheet">
	<link href="/css/tailwind.css" rel="stylesheet">
	<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
	<title></title>
</head>
<body>
	<div class="home-top">
		<form action="/bots" id="form" method="post" name="form">
			<div class="searchDiv">
				<div style="padding-bottom: 10px; text-align: center">
					<h1 class="text-6xl font-bold mb-2" style="font-family: 'Montserrat', sans-serif">Search</h1>
				</div>
				<div class="icon">
					<input id="searchQueryInput" name="search" placeholder="Search existing Bots" type="text" value="<%= search ? search : ''%>"/><button id="searchQuerySubmit" name="searchQuerySubmit" onclick="doSearch()" type="submit"><svg style="width:24px;height:24px" viewbox="0 0 24 24">
					<path d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" fill="#666666"></path></svg></button></div>
        	<div class="px-3 flex flex-wrap mt-5" style="color: white">
		    	<a class="bg-gray-light px-2 py-1 rounded-md mr-2 mb-2" href="/bots?tag=ReactionRoles">Reaction Roles</a> <a class="bg-gray-light px-2 py-1 rounded-md mr-2 mb-2" href="/bots?tag=Ticket">Ticket</a> <a class="bg-gray-light px-2 py-1 rounded-md mr-2 mb-2" href="/bots?tag=custom">Custom</a>
	    	</div>
		  	</div>
		</form>
    <div class="wave"></div>
	  </div>
	<div class="home">
		<div style="padding-bottom: 60px;"></div>
		<div id="loader">
			<div class="lds-facebook">
				<div></div>
				<div></div>
				<div></div>
			</div>
			<div style="padding-bottom: 60px;"></div>
		</div>
		<section class="mb-20">
    <%if(alert) { %><%if (alert === "❌ No Bots found :(")  { %>
				<div>
					<h1><%= alert %></h1>
				</div><%} %><%} %>
			<div class="flex"></div>
			<div class="grid grid-cols-6 gap-5">
				<%if (prods && prods.length > 0) { %><%for (let product of prods) { %> <a class="block col-span-6 sm:col-span-3 lg:col-span-2 bg-gray-darker rounded-lg flex flex-col transform hover:scale-102 transition-transform transition-300" href="/bots/<%= product._id %>" style="margin: 50px; background-color: #2222 !important">
				<div data-aos="zoom-in">
					<div class="p-6 flex-grow" id="new-bots-color">
						<div style="vertical-align: middle; text-align: center; margin: -92.5px auto 0px; position: relative;"><img src="/<%=product.imageUrl%>" style="margin-left: auto;margin-right: auto;vertical-align: middle; text-align: center; border-radius: 50%; width: 150px; height: 150px"></div>
						<div class="mb-5">
							<div class="text-xl mb-2" style="color: #fff">
								<%= product.title %>
							</div>
							<div class="font-thin text-normal text-gray-300">
								<%= product.summary || "No Summary Provided" %>
							</div>
						</div>
						<div class="flex flex-wrap text-gray-300">
							<%product.tags.forEach((tag)=>{ %>
							<div class="bg-gray-dark px-2 py-1 rounded-md mr-2 mb-2" id="home-text">
								<%= tag %>
							</div><%}) %>
						</div>
					</div>
					<div class="grid grid-cols-2 bg-gray-dark justify-items-center gap-3 p-5 text-xl text-gray-300 rounded-b-lg" id="home-text">
						<div class="text-right">
							<span><i class="fas fa-eye"></i></span> <span class="align-middle ml-2"><%= product.views || 0 
							                                 %></span>
						</div>
						<div class="text-left" style="display: block">
							<img alt="Avatar" id="home-image" src="https://cdn.discordapp.com/avatars/710465231779790849/a_5bcdd6b8c41b74d696eb67c854870591.gif?size=512"> <span class="align-middle ml-2"><%= product.addedBy %></span>
						</div>
					</div>
				</div></a> <%} %> <%} %>
			</div>
		</section>
	</div>
	<div style="padding-top: 20px"></div>
	<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'>
	</script> 
	<script src='/js/main.js'>
	</script> 
	<script src="https://unpkg.com/aos@2.3.1/dist/aos.js">
	</script> 
	<script>
	 AOS.init();
	</script>
</body>
<%- include("../partials/homefooter.ejs") %>
<%- include("../partials/footer.ejs") %>