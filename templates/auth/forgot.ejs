<%- include("../partials/head", { user, path, title: "Ecoplug - Forgot",  url}) %>
<head>
	<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
	<link href="/css/auth.css"  type="text/css" rel="stylesheet">
	<link href="/css/tailwind.css"  type="text/css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css"  type="text/css" rel="stylesheet">
</head>
<body>
	<div class="home-top">
   <div id="loader"><div class="lds-facebook"><div></div><div></div><div></div></div></div>
		<form action="/forgot" id="form" method="post" name="form">
			<div class="auth">
	<div class="auth-box">
            <div class="wrap-auth">  
                    <% if(alert) { %><div class="alert-validate"><%= alert %></div><% } %>
                    <span class="auth-form-title">Forgot Password?</span>
            
                    <div class="wrap-input rs1-wrap-input">
                        <input class="input" id="email" type="email" name="email" placeholder="your account email adress" required/>
                        <span class="input-line"></span>
                    </div>
                  
                    <div class="auth-box-form-btn">
                        <button id="button" type="button" onclick="submit()">Send Email</button>
                    </div>
                

            </div>
			</div>
		</form>
    	<div class="wave"></div>
	</div>
	<div style="padding-top: 20px"></div>
	<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'>
	</script> 
	<script src='/js/main.js'></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script src="/js/forgot.js"></script>
  <script>
  AOS.init();
</script>
</body>

